<div class="row">
  <div class="col-lg-10">
    <% unless notice.blank? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
    <% end %>

    <h1>Products</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= link_to 'Show', product, class: 'btn btn-default' %></td>
            <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', product, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
  </div>
</div>
