<div class="row">
  <div class="col-lg-10">
    <% unless notice.blank? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
    <% end %>
    <h3>Name</h3>
    <p><%= @product.name %></p>
    <h3>Price</h3>
    <p><%= @product.price %></p>

    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-success' %>
    <%= link_to 'Back', products_path, class: 'btn btn-default' %>
  </div>
</div>
